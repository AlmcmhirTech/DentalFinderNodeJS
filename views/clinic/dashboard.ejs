<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">Dashboard</h4>
            </div>
        </div>
        <h3>Today's Appointments</h3>
    </div>
    <div class="statistic_chart">     
        <canvas id="TodaysAppointmentServices"></canvas>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h3 class="page-title">Recent Appointments</h3>
                </div>
            </div>
        </div>
        <div class="modal-container"></div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        
                        <div class="table-responsive">
                            <table id="table-account" class="table table-centered table-nowrap mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class = "text-center">Name</th>
                                        <th class = "text-center">Branch</th>
                                        <th class = "text-center">Service</th>
                                        <th class = "text-center">Time</th>
                                        <th class = "text-center">Status</th>
                                        <th class = "text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% rappointments.forEach((appointment) =>{ %>
                                        <tr class = "table-row">
                                          <td class = "text-center"><%= appointment.name%></td>
                                          <td class = "text-center"><%= appointment.address%></td>
                                          <td class = "text-center"><%= appointment.service_name%></td>
                                          <td class = "text-center"><%= appointment.set_time%></td>
                                          <td class = "text-center"><%= appointment.status%></td>
                                          <td class="td-centered" style="gap:2px">
                                            <div data-bs-toggle="modal" data-appointment-id="<%= appointment.appointment_id %>" data-bs-target="#acceptAppointmentModal">
                                                <a id="deleteUser" class="btn btn-success">
                                                    Accept
                                                </a>
                                            </div>
                                            <div class="modal fade" id="acceptAppointmentModal" tabindex="-1" role="dialog" aria-labelledby="acceptbtnTitle" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered" role="document">
                                                    <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="deletebtnTitle">Accept Confirmation</h5>  
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to accept?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <button type="button" id="confirm-accept-btn" class="btn btn-success">Accept</button>
                                                    </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div data-bs-toggle="modal" data-appointment-id="<%= appointment.appointment_id %>" data-bs-target="#rejectAppointmentModal">
                                                <a id="rejectAppointment" class="btn btn-danger">
                                                    Reject
                                                </a>
                                            </div>
                                                <div class="modal fade" id="rejectAppointmentModal" tabindex="-1" role="dialog" aria-labelledby="deletebtnTitle" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                                        <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="deletebtnTitle">Reject Confirmation</h5>  
                                                        </div>
                                                        <div class="modal-body">
                                                            Are you sure you want to reject?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                            <button type="button" id="confirm-reject-btn" class="btn btn-danger">Reject</button>
                                                        </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div data-bs-toggle="modal" data-appointment-id="<%= appointment.appointment_id %>" data-bs-target="#deleteAppointmentModal">
                                                    <a id="deleteAppointment" class="btn btn-danger">
                                                        Delete
                                                    </a>
                                                </div>
                                                    <div class="modal fade" id="deleteAppointmentModal" tabindex="-1" role="dialog" aria-labelledby="deletebtnTitle" aria-hidden="true">
                                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                                            <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="deletebtnTitle">Delete Confirmation</h5>  
                                                            </div>
                                                            <div class="modal-body">
                                                                Are you sure you want to delete?
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                <button type="button" id="confirm-delete-btn" class="btn btn-danger">Delete</button>
                                                            </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                            </td>   
                                        </tr>
                                        <%}); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
    

        
</div>
