<!-- DENTAL CLINIC REGISTER FORM -->
 <section class="my-5 py5">
    <div class="container text-center mt-3 pt-3">
        <h2 class="form-weight-bold">Request Clinic</h2>
        <hr class="mx-auto">
    </div>
    <div class="mx-auto container">
        <form action = '/clinic/sent-request' method = 'post' id="register-form">
            <div class="form-group">
                <label>License:</label>
                <input type="file" class="form-control" id="register-clicense" name="license">
                <span><%= error %></span>
            </div>
            <div class="form-group">
                <label>Name:</label>
                <input type="text" class="form-control" id="register-clicense" name="clinic_name" placeholder = 'Enter Clinic Name'>
                <span><%= error %></span>
            </div>
             <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" id="register-clicense" name="email" placeholder = 'Enter Clinic E-mail'>
                <span><%= error %></span>
            </div>
             <div class="form-group">
                <label>Password:</label>
                <input type="password" class="form-control" id="register-clicense" name="password" placeholder = 'Enter Password'>
                <span><%= error %></span>
            </div>
            <div class="form-group">
                <label>Contact:</label>
                <input type="text" class="form-control" id="register-clicense" name="mobile_number" placeholder = 'Enter Mobile Number'>
                <span><%= error %></span>
            </div>
            <div class="form-group">
                <label>Address:</label>
                <input type="text" class="form-control" id="register-clicense" name="address" placeholder = 'Enter Clinic Address'>
                <span><%= error %></span>
            </div>
            <div class="form-group">
                <label>Village:</label>
                <input type="text" class="form-control" id="register-clicense" name="village" placeholder = 'Enter Clinic Village'>
                <span><%= error %></span>
            </div>
             <div class="form-group">
                <label>Postcode:</label>
                <input type="text" class="form-control" id="register-clicense" name="postcode" placeholder = 'Enter Postcode'>
                <span><%= error %></span>
            </div>
            <br>
            <span>Notify me on:</span>
            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" id="register-cemail" name="clinic_email" placeholder="Enter Email">
                <span><%= error %></span>
            </div>
            <div class="form-group">
                <label>Contact Number:</label>
                <input type="tel" class="form-control" id="register-contact" name="contact" placeholder="Enter Contact">
                <span><%= error %></span>
            </div>
            
            <div class="form-group">
                <input type="submit" class="btn" id="register-btn" value="Register"/>
            </div>
            <div class="form-group">
               <p>Already have an account?<a href = '../login/clinic_login.php' id="login-url" class="btn">Login</a></p>
            </div>
        </form>
    </div>
