                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="d-flex justify-content-center align-items-center">
                                <form action = "/clinic/appointments" method = "POST" class="d-flex me-2">
                                    <div class="d-flex align-items-center">
                                        <label for="role-filter" class="me-2">Branch</label>
                                        <select id="role-filter me-2" name = "address" class="form-select me-2">
                                            <option value="All">All</option>
                                            <% branches.forEach((branch) =>{ %>
                                            <option value="<%= branch.address %>"><%= branch.address %></option>
                                            <% }); %>
                                        </select>
                                    </div>
                                        <div class="input-group w-100 align-items-center">
                                            <button type = "submit" class="input-group-text bg-primary border-primary text-white brand-bg-color align-items-center">
                                                <i class="bi bi-search"></i>
                                            </button>
                                        </div>
                                </form> 
                            </div>
                        </div>
                        
                        <div class="table-responsive">
                            <table id="table-account" class="table table-centered table-nowrap mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class = "text-center">Name</th>
                                        <th class = "text-center">Branch</th>
                                        <th class = "text-center">Service</th>
                                        <th class = "text-center">Time</th>
                                        <th class = "text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% pending_appointments.forEach((appointment) =>{ %>
