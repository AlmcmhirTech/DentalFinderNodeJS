                                          <td class = "text-center"><%= appointment.name%></td>
                                          <td class = "text-center"><%= appointment.address%></td>
                                          <td class = "text-center"><%= appointment.service_name%></td>
                                          <td class = "text-center"><%= appointment.set_time%></td>
                                          <td class="td-centered" style="gap:2px">
                                            <div data-bs-toggle="modal" data-appointment-id="<%= appointment.appointment_id %>" data-bs-target="#acceptAppointmentModal">
                                                <a id="deleteUser" class="btn btn-success">
                                                    Accept
                                                </a>
                                            </div>
                                            <div class="modal fade" id="acceptAppointmentModal" tabindex="-1" role="dialog" aria-labelledby="acceptbtnTitle" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered" role="document">
                                                    <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="deletebtnTitle">Accept Confirmation</h5>  
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to accept?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <button type="button" id="confirm-accept-btn" class="btn btn-success">Accept</button>
                                                    </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div data-bs-toggle="modal" data-appointment-id="<%= appointment.appointment_id %>" data-bs-target="#rejectAppointmentModal">
                                                <a id="rejectAppointment" class="btn btn-danger">
                                                    Reject
                                                </a>
                                            </div>
                                                <div class="modal fade" id="rejectAppointmentModal" tabindex="-1" role="dialog" aria-labelledby="deletebtnTitle" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                                        <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="deletebtnTitle">Reject Confirmation</h5>  
                                                        </div>
                                                        <div class="modal-body">
                                                            Are you sure you want to reject?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                            <button type="button" id="confirm-reject-btn" class="btn btn-danger">Reject</button>
                                                        </div>
                                                        </div>
                                                    </div>
                                                </div>
